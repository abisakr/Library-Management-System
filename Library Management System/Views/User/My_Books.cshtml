@{
    Layout = "Layout1";
}
@model IEnumerable<StudentBook>
<div class="border container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">My Books</h2>

        </div>

    </div>
    <hr />

    <table class="table table-bordered table-striped " style="width:100%">
        <thead>
            <tr>
                <th>
                    Book Id
                </th>
                <th>
                    Book Name
                </th>
                <th>
                    Auther
                </th>
                <th>
                    Faculty
                </th>
              
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="10%">
                        @obj.BookId
                    </td>
                    <td width="30%">
                        @obj.Book.BookName

                    </td>
                    <td width="30%">
                        @obj.Book.Auther

                    </td>
                    <td width="50%">
                        @obj.Book.BFaculty

                    </td>


                  

                   
                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="User" asp-action="Button" class=" btn btn-secondary " style="width:150px">Back</a>
</div>
