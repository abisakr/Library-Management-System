@model IEnumerable<Book>

<div class="border container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">   Available Books</h2>
          
        </div>
        <div class=" col-6 text-end">
            <a asp-controller="Admin" asp-action="Add_Book" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> &nbsp; Add Book</a>
        </div>
    </div>
    <hr />


   
    <table id="example" class="table table-bordered table-striped " style="width:100%">
        <thead>
            <tr>
                <th>
                Book Id
                </th>
                <th>
                   Book Name
                </th>
                <th>
                    Auther
                </th>
                <th>
                    Faculty
                </th>
                <th>
                  NOofBooks
                </th>
                <th>
                    Action
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="10%">
                        @obj.BookId
                    </td>
                    <td width="30%">
                        @obj.BookName

                    </td>
                    <td width="30%">
                        @obj.Auther

                    </td>
                    <td width="50%">
                        @obj.BFaculty

                    </td>
                    <td width="30%">
                        @obj.NoOfBooks

                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">

                            <a asp-controller="Admin" asp-action="Edit_Book" asp-route-id="@obj.BookId" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Admin" asp-action="Delete_Book" asp-route-id="@obj.BookId" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
        <a asp-controller="Home" asp-action="Button" class=" btn btn-secondary " style="width:150px">Back</a>
</div>

