@{
    Layout = "Layout1";
}
@model Student


<link href="~/css/BoostrapTheme.css" rel="stylesheet" />

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Student</h2>
            <hr />
        </div>

        <div class="row mb-3">

            <div class=" col mb-3">
                <label asp-for="StudentName"></label>
                <input asp-for="StudentName" class="form-control  rounded-4" />
                <span asp-validation-for="StudentName" class="text-danger"></span>
            </div>

            <div class=" col mb-3">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control  rounded-4" />
                <span asp-validation-for="Address" class="text-danger"></span>

            </div>
        </div>
        <div class="row mb-3">

            <div class="col mb-3">
                <label>Faculty</label>
                <input asp-for="Faculty" class="form-control  rounded-4" />
                <span asp-validation-for="Faculty" class="text-danger"></span>

            </div>
           
        </div>
        <button class=" btn btn-primary " type="submit" style="width:150px">Add Student</button>
        <a asp-controller="Admin" asp-action="Manage_Students" class=" btn btn-secondary " style="width:150px">Back</a>
    </div>
</form>


