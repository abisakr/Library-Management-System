@{
    Layout = "Layout1";
}
@using Library_Management_System.DTO;
<link href="~/css/BoostrapTheme.css" rel="stylesheet" />
@model User
<form method="post" asp-controller="Admin" asp-action="DeleteUser">
   <input asp-for="UserId" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete User</h2>
            <hr />
        </div>

      <div class=" row mb-3">
        <div class=" col mb-3">
            <label asp-for="UserId"></label>
                <input disabled asp-for="UserId" class="form-control rounded-4" />
            <span asp-validation-for="UserId" class="text-danger"></span>
        </div>
        <div class=" col mb-3">
            <label asp-for="Username"></label>
                <input disabled asp-for="Username" class="form-control rounded-4" />
            <span asp-validation-for="Username" class="text-danger"></span>

        </div>
        </div>
        <div class=" row mb-3">
            <div class=" col mb-3">
            <label asp-for="Password"></label>
                <input disabled asp-for="Password" class="form-control rounded-4" />
            <span asp-validation-for="Password" class="text-danger"></span>

        </div>
            <div class=" col mb-3">
               

            </div>
    </div>
        <button class=" btn btn-danger " type="submit" style="width:150px">Delete</button>
        <a asp-controller="Admin" asp-action="Manage_User" class=" btn btn-secondary " style="width:150px">Back</a>
    </div>
</form>

