

@model IEnumerable<User>
<div class=" border container p-3">
    <div class="row pt-4">
        <div class="col-6 ">
            <h2 class="text-primary">LMS Users</h2>
           
        </div> 
        <div class=" col-6 text-end">
            <a asp-controller="Admin" asp-action="Add_User" class="btn btn-primary"> <i class="bi bi-plus-circle"></i> &nbsp; Add User</a>
        </div>
    </div>
    <hr />
    <table id="example"  class="table table-bordered table-striped " style="width:100%">
        <thead>
            <tr>
                <th>
                    User Id
                </th>
                <th>
                    User Name
                </th>
                <th>
                  Password
                </th>
                <th>
                    Action
                </th>


            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="20%">
                        @obj.UserId
                    </td>
                    <td width="20%">
                        @obj.Username
                    </td>
                    <td width="30%">
                        @obj.Password

                    </td>
                   
                 
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Admin" asp-action="Edit_User" asp-route-id="@obj.UserId" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
                            <a asp-controller="Admin" asp-action="Delete_User" asp-route-id="@obj.UserId" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
    <a asp-controller="Home" asp-action="Button" class=" btn btn-secondary " style="width:150px">Back</a>
</div>

